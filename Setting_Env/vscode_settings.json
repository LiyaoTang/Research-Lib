{
    "files.exclude": {
        "**/__pycache__": true,
        "**/.ipynb_checkpoints": true,
        "Data/*": true
    },

    "editor.fontSize": 16,
    "editor.formatOnType": true,
    "editor.largeFileOptimizations": true,
    "editor.defaultFormatter": "himanoa.Python-autopep8",

    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
    },
    "C_Cpp.clang_format_path": "/usr/bin/clang-6.0",
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.default.includePath": ["/usr/include",
                                  "/usr/local/lib",
                                  "/usr/local/include",
                                  "/usr/local/include/libtorch/**",
                                  "${workspaceFolder}/**",
                                  "${PATH}"],

    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Path": "~/.local/bin/autopep8",
    "python.formatting.autopep8Args": ["--global-config=~/Research-Lib/Setting_Env/format_python_autopep8"],
    "python.linting.enabled" : false,
    "python.jediEnabled": true,
    "python.terminal.activateEnvironment": false,
    "python.dataScience.sendSelectionToInteractiveWindow": false,

    "terminal.integrated.shell.linux": "/bin/bash",
    "window.zoomLevel": 0,
    "workbench.editor.revealIfOpen": true,

    "[latex]": {
        "editor.wordWrap": "on"
    },
    "latex-workshop.view.pdf.viewer": "tab",
    "C_Cpp.updateChannel": "Insiders",
    "cmake.configureOnOpen": false,
}